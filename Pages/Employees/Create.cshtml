@page
@model EmployeeApp.Pages.Employees.Create
@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-4">
        <h4 class="text-center mb-3">Create Employee</h4>
        <form method="post" enctype="multipart/form-data">
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">First Name *</label>
                <div class="col-sm-8">
                    <input asp-for="First_Name" class="form-control" />
                    <span asp-validation-for="First_Name" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Last Name *</label>
                <div class="col-sm-8">
                    <input asp-for="Last_Name" class="form-control" />
                    <span asp-validation-for="Last_Name" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Department *</label>
                <div class="col-sm-8">
                    <input asp-for="Department" class="form-control" />
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Email *</label>
                <div class="col-sm-8">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Joining Date *</label>
                <div class="col-sm-8">
                    <input asp-for="JoiningDate" class="form-control" />
                    <span asp-validation-for="JoiningDate" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Profile Picture</label>
                <div class="col-sm-8">
                    <input asp-for="ProfilePictureFile" type="file" class="form-control" accept="image/*" />
                    <img src="https://ui-avatars.com/api/?name=@(Model.First_Name + "+" + Model.Last_Name)&background=random&rounded=true"
                         alt="Profile Preview" style="width:80px;height:80px;object-fit:cover;border-radius:50%;margin-top:8px;" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary w-100">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary w-100" href="/Employees/Index" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>